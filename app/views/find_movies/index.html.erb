<h1 class="titulo">Filmes Encontrados</h1>

<% @finded_option.each do |movie|%>
    <p><%= movie['title'] %></p>
    <p>Sinopse: <%= movie['overview'] %></p>
    <p>Avaliação: <%= movie['vote_average'] %><p>
    <p>Poster: 
        <img src="http://image.tmdb.org/t/p/w500<%= movie['poster_path']%>">
    </p>
    <%= form_tag(my_movies_path, method: :post) do %>       
        <%= hidden_field_tag(:movie_identification, movie['id'] ) %>       
        <%= submit_tag("Adicionar filme a lista")  %> 
    <% end %>
<% end %>
